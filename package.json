{
  "name": "webcron",
  "version": "1.1.0",
  "description": "Webcron is a server that will periodically download web content and store it in text, PDF, JPEG, and PNG format.",
  "license": "Apache-2.0",
  "private": true,
  "scripts": {
    "start": "npm run build && npm run watch",
    "build": "npm run build-ts && npm run tslint",
    "serve": "node dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"nodemon dist/server.js\"",
    "test": "jest --forceExit --coverage --detectOpenHandles",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json"
  },
  "jest": {
    "globals": {
      "__TS_CONFIG__": "tsconfig.json"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/test/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node"
  },
  "author": "Jeremy Edwards",
  "dependencies": {
    "async": "^3.2.0",
    "async-retry": "^1.3.1",
    "commander": "^6.0.0",
    "compression": "^1.7.4",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "express-prom-bundle": "^6.1.0",
    "js-yaml": "^3.14.0",
    "lusca": "^1.6.1",
    "mkdir-recursive": "^0.4.0",
    "morgan": "^1.10.0",
    "node-cron": "^2.0.3",
    "pkg": "^4.4.9",
    "prom-client": "^12.0.0",
    "puppeteer": "^5.2.1",
    "request": "^2.88.2",
    "retry": "^0.12.0",
    "serve-index": "^1.9.1",
    "typescript": "^3.9.7",
    "url": "^0.11.0"
  },
  "devDependencies": {
    "@types/async": "^3.2.3",
    "@types/async-retry": "^1.4.2",
    "@types/errorhandler": "^1.5.0",
    "@types/express": "^4.17.6",
    "@types/jest": "^26.0.10",
    "@types/js-yaml": "^4.0.1",
    "@types/morgan": "^1.9.1",
    "@types/node": "^13.13.5",
    "@types/node-cron": "^2.0.3",
    "@types/puppeteer": "^3.0.1",
    "@types/request": "^2.48.5",
    "@types/retry": "^0.12.0",
    "@types/serve-index": "^1.7.30",
    "@types/supertest": "^2.0.10",
    "concurrently": "^5.3.0",
    "jest": "^25.5.4",
    "shelljs": "^0.8.4",
    "supertest": "^4.0.2",
    "ts-jest": "^25.5.1",
    "tslint": "^6.1.3"
  },
  "bin": "dist/server.js",
  "pkg": {
    "assets": "dist/**/*"
  }
}
