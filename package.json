{
  "name": "webcron",
  "version": "1.1.0",
  "description": "Webcron is a server that will periodically download web content and store it in text, PDF, JPEG, and PNG format.",
  "private": true,
  "scripts": {
    "start": "npm run build && npm run watch",
    "build": "npm run build-ts && npm run tslint",
    "serve": "node dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"nodemon dist/server.js\"",
    "test": "jest --forceExit --coverage --detectOpenHandles",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json"
  },
  "jest": {
    "globals": {
      "__TS_CONFIG__": "tsconfig.json"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/test/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node"
  },
  "author": "Jeremy Edwards",
  "dependencies": {
    "async": "^2.6.1",
    "async-retry": "^1.2.3",
    "compression": "^1.7.3",
    "commander": "^2.18.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.3",
    "express-prom-bundle": "^4.2.1",
    "js-yaml": "^3.12.0",
    "lusca": "^1.6.1",
    "mkdir-recursive": "^0.4.0",
    "morgan": "^1.9.1",
    "node-cron": "^2.0.1",
    "prom-client": "^11.1.1",
    "puppeteer": "^1.8.0",
    "request": "^2.88.0",
    "retry": "^0.12.0",
    "serve-index": "^1.9.1",
    "typescript": "^3.0.3",
    "url": "^0.11.0"
  },
  "devDependencies": {
    "@types/async": "^2.0.49",
    "@types/async-retry": "^1.2.1",
    "@types/errorhandler": "0.0.32",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.2",
    "@types/js-yaml": "^3.11.2",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.9.4",
    "@types/node-cron": "^1.2.0",
    "@types/puppeteer": "^1.6.3",
    "@types/request": "^2.47.1",
    "@types/retry": "^0.10.2",
    "@types/serve-index": "^1.7.29",
    "@types/supertest": "^2.0.6",
    "concurrently": "^4.0.1",
    "jest": "^23.6.0",
    "shelljs": "^0.8.2",
    "supertest": "^3.3.0",
    "ts-jest": "^23.1.4",
    "tslint": "^5.11.0"
  }
}
